generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique @db.VarChar(100)
  senha String @db.VarChar(255)
  token Int
  icon Int @default(0) 
  verify Int @default(0)
  cards Int @default(0)
  level Int @default(0)

  @@map("users")
}